{
  "name": "graphql-testdrive",
  "version": "1.0.0",
  "description": "testdriving graphql server",
  "main": "index.js",
  "scripts": {
    "build": "concurrently \"npm run build:server\" \"npm run build:client\"",
    "build:client": "node ./scripts/build-client.js",
    "build:server": "babel src -d lib",
    "coverage":
      "jest --coverage && node ./scripts/coverage-client.js && codecov",
    "coverage:old": "jest --coverage",
    "db:createMigration":
      "babel-node \"./node_modules/.bin/sequelize\" migration:generate",
    "db:createModel":
      "babel-node \"./node_modules/.bin/sequelize\" model:generate",
    "db:createSeed":
      "babel-node \"./node_modules/.bin/sequelize\" seed:generate",
    "db:migrate": "babel-node \"./node_modules/.bin/sequelize\" db:migrate",
    "db:migrate:undo":
      "babel-node \"./node_modules/.bin/sequelize\" db:migrate:undo:all",
    "db:seed":
      "NODE_ENV=development babel-node \"./node_modules/.bin/sequelize\" db:seed:all",
    "db:seed:undo":
      "NODE_ENV=development babel-node \"./node_modules/.bin/sequelize\" db:seed:undo:all",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:client": "node ./scripts/start-client.js",
    "dev:server": "nodemon ./src/index.js",
    "dev:server:debug": "nodemon --inspect ./src/index.js ",
    "format": "prettier-eslint \"src/**/*.js\" --write",
    "lint": "eslint \"./src\"",
    "seed": "babel-node \"./src/model/seed.js\"",
    "seedBuild": "node \"./lib/model/seed.js\"",
    "prestart": "npm run seedBuild",
    "start": "node \"./lib/server.js\"",
    "test": "jest",
    "test:debug": "node --debug-brk ./node_modules/.bin/jest --runInBand",
    "test:watch": "jest --watch"
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-jest": "^21.2.0",
    "babel-preset-env": "^1.5.1",
    "codecov": "^2.2.0",
    "concurrently": "^3.4.0",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.3.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.0.1",
    "jest": "^21.2.1",
    "nodemon": "^1.11.0",
    "prettier-eslint-cli": "^4.0.2",
    "regenerator-runtime": "^0.11.0",
    "sequelize-cli": "^3.0.0"
  },
  "eslintConfig": {
    "extends": "airbnb",
    "plugins": ["import"],
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [".js", ".jsx"]
        }
      ],
      "react/prop-types": [0]
    }
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "6"
          }
        }
      ]
    ]
  },
  "jest": {
    "rootDir": "./src",
    "coverageDirectory": "../coverage",
    "collectCoverageFrom": ["**/*.{js,jsx}", "!**/node_modules/**"],
    "coverageReporters": ["json", "lcov", "text", "text-summary"],
    "coverageThreshold": {
      "global": {
        "branches": 95,
        "functions": 95,
        "lines": 95,
        "statements": 95
      }
    }
  },
  "dependencies": {
    "@std/esm": "^0.12.0",
    "body-parser": "^1.17.2",
    "casual": "^1.5.12",
    "express": "^4.15.3",
    "express-jwt": "^5.3.0",
    "express-jwt-authz": "^1.0.0",
    "graphql": "^0.11.7",
    "graphql-server-express": "^1.1.7",
    "graphql-tools": "^2.5.1",
    "jwks-rsa": "^1.1.1",
    "lodash": "^4.17.4",
    "sequelize": "^4.15.0",
    "serve-static": "^1.12.3",
    "sqlite3": "^3.1.8"
  }
}
